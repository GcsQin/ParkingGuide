<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >
    <ImageView
        android:layout_marginRight="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:id="@+id/img_wechat_item"
        />
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:id="@+id/tv_wechat_title"
        android:text="吴冠中丨了了几笔，春风十里"
        />
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【民国文艺】"
        android:id="@+id/tv_wechat_resource"
        android:textSize="@dimen/tipsize"
        android:layout_alignBottom="@+id/img_wechat_item"
        />
    <TextView
        android:layout_below="@+id/tv_wechat_resource"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#686969"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />
</RelativeLayout>
