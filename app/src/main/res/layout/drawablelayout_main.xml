<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="16dp"
                android:id="@+id/recycleView_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/fly_button"
                android:id="@+id/float_btn"
                app:fabSize="normal"
                android:onClick="floatLocation"
                app:backgroundTint="@color/colorPrimary"
                app:rippleColor="#7ea19f"
                />
        </RelativeLayout>
    </LinearLayout>
    <!--android:layout_gravity="start"属性使这部分作为侧滑部分-->
    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <!--用于设置菜单项-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0078D7"
            >
            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/appbarsize"
                android:id="@+id/tv_wtCity"
                android:layout_centerHorizontal="true"
                android:text="北京市"
                />
            <TextView
                android:textColor="#ffffff"
                android:layout_below="@+id/tv_wtCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wtTime"
                android:text="2017年4月27日"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:textColor="#ffffff"
                android:layout_below="@+id/tv_wtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/appbarsize"
                android:id="@+id/tv_wtStatu"
                android:layout_marginLeft="16dp"
                android:text="多云"
                />
             <TextView
                 android:textColor="#ffffff"
                 android:layout_toRightOf="@+id/tv_wtStatu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                 android:textSize="@dimen/appbarsize"
                 android:id="@+id/tv_wtTemp"
                 android:layout_alignTop="@+id/tv_wtStatu"
                 android:text="-7"
                 />
            <TextView
                android:textColor="#ffffff"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wtWindyDire"
                android:text="西北风"
                android:layout_below="@+id/tv_wtStatu"
                />
            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_wtWindyDire"
                android:id="@+id/tv_wtWindyPower"
                android:layout_below="@+id/tv_wtStatu"
                android:text="7级"
                />
            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/tv_wtWindyPower"
                android:id="@+id/tv_wtHumiditext"
                />
            <TextView
                android:layout_below="@+id/tv_wtWindyPower"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_wtHumiditext"
                android:id="@+id/tv_wtHumidi"
                android:text="34%"
                />
        </RelativeLayout>
        <ListView
            android:id="@+id/lvMenu"
            android:background="#548ED4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
